<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/action_message_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="0dp"
        android:gravity="center"
        android:src="@drawable/ic_message_white_48dp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/action_message_counter"
        style="@style/CounterStyle"
        android:layout_alignRight="@id/action_message_img"
        android:layout_alignTop="@id/action_message_img"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-3dp"
        android:visibility="gone" />
</RelativeLayout>